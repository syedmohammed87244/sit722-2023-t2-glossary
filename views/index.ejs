<!DOCTYPE html>
<html>
  <head>
    <title>DevOps Glossary</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
      }

      th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
      }

      th {
        background-color: #f2f2f2;
      }
    </style>
  </head>
  <body>
    <h1>DevOps Glossary</h1>
    <table>
      <tr>
        <th>ID</th>
        <th>Term</th>
        <th>Description</th>
        <th>Reference</th>
      </tr>
      <% for (let term of glossary) { %>
      <tr>
        <td><%= term.id %></td>
        <td><%= term.term %></td>
        <td><%= term.description %></td>
        <td><%= term.reference %></td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
